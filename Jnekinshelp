pipeline {
    agent any

    tools {
        jdk 'JDK 17'
        maven 'Maven 3.9.9'
    }

   
    

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test -Dtest=*Test -Dsurefire.excludedTests=PostgresIntegrationTests'
                
            }
        }
        stage('Verify target contents') {
    steps {
        bat 'dir target'
    }
}
        

        stage('Docker Build') {
            steps {
                bat 'docker build -t spring-petclinic:latest .'
            }
        }
        stage('push docker imag'){
        steps{

        withCredentials([string(credentialsId: 'dockerhub-token', variable: 'DOCKER_TOKEN')]) {
    bat """
        echo %DOCKER_TOKEN% | docker login -u chaitanya00231 --password-stdin
    """
    bat 'docker tag spring-petclinic chaitanya00231/spring-petclinic:latest'
    bat 'docker push chaitanya00231/spring-petclinic:latest'
}
}
}
        
stage('Deploy to OpenShift') {
    steps {
        withCredentials([string(credentialsId: 'openshift-token-id', variable: 'TOKEN')]) {
            bat '''
                echo "Logging into OpenShift..."
                oc login --token=$TOKEN --server=https://api.rm2.thpm.p1.openshiftapps.com:6443

                echo "Switching to project..."
                oc project chaitanya231-dev

                echo "Restarting deployment..."
                oc rollout restart deployment/spring-petclinic
            '''
        }
    }
}

 
        

        
        }
    }

